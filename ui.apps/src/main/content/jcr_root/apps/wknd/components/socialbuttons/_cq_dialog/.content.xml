<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Social Button"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
            fieldLabel="Contenuto Multifield"
            name="./content">
        <field
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                name="./field"
                multiple="true">
            <items jcr:primaryType="nt:unstructured">
                <colorSelect
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                        fieldLabel="Colore"
                        name="./colorSelect"/>
                <link
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Link"
                        name="./link"
                        rootPath="/content/wknd"/>
                <iconSelect
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Icona"
                        name="./iconSelect"
                        options="[Facebook, Instagram]"/>
                <fontAwesomeCss
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        cssPath="apps/wknd/clientlibs/clientlib-vendors/css/fontawesome.min.css"/>
                <iconPreview
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/icon"
                        name="./iconPreview"
                        fieldLabel="Anteprima Icona"
                        text="${properties.iconSelect}"
                        cssClasses="fa ${properties.iconSelect}"/>
            </items>
        </field>
    </content>
</jcr:root>